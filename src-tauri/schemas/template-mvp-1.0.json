{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "./template-mvp-1.0.json",
  "title": "VTuber Overlay Template Schema (MVP)",
  "description": "3カラムオーバーレイテンプレートのJSON Schema（MVP版）",
  "type": "object",
  "required": ["layout", "safeAreaPct", "components"],
  "properties": {
    "layout": {
      "type": "object",
      "description": "3カラムレイアウト設定",
      "required": ["type", "leftPct", "centerPct", "rightPct", "gutterPx"],
      "properties": {
        "type": { "const": "threeColumn" },
        "leftPct": { "type": "number", "minimum": 0.18, "maximum": 0.28, "default": 0.22 },
        "centerPct": { "type": "number", "minimum": 0.44, "maximum": 0.64, "default": 0.56 },
        "rightPct": { "type": "number", "minimum": 0.18, "maximum": 0.28, "default": 0.22 },
        "gutterPx": { "type": "integer", "minimum": 0, "maximum": 64, "default": 24 }
      },
      "additionalProperties": false
    },
    "safeAreaPct": {
      "type": "object",
      "description": "セーフエリア設定（0.0〜0.10）",
      "required": ["top", "right", "bottom", "left"],
      "properties": {
        "top": { "type": "number", "minimum": 0.0, "maximum": 0.10, "default": 0.04 },
        "right": { "type": "number", "minimum": 0.0, "maximum": 0.10, "default": 0.04 },
        "bottom": { "type": "number", "minimum": 0.0, "maximum": 0.10, "default": 0.05 },
        "left": { "type": "number", "minimum": 0.0, "maximum": 0.10, "default": 0.04 }
      },
      "additionalProperties": false
    },
    "theme": {
      "type": "object",
      "description": "テーマ設定（色・フォント・影・アウトライン）",
      "properties": {
        "fontFamily": { "type": "string" },
        "textColor": { "type": "string" },
        "panel": {
          "type": "object",
          "properties": {
            "bg": { "type": "string" },
            "blurPx": { "type": "integer", "minimum": 0, "maximum": 24, "default": 10 },
            "radiusPx": { "type": "integer", "minimum": 0, "maximum": 32, "default": 14 }
          },
          "additionalProperties": false
        },
        "shadow": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": true },
            "blur": { "type": "integer", "minimum": 0, "maximum": 24, "default": 8 },
            "opacity": { "type": "number", "minimum": 0.0, "maximum": 1.0, "default": 0.55 },
            "offsetX": { "type": "integer", "minimum": -20, "maximum": 20, "default": 2 },
            "offsetY": { "type": "integer", "minimum": -20, "maximum": 20, "default": 2 }
          },
          "additionalProperties": false
        },
        "outline": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean", "default": false },
            "width": { "type": "integer", "minimum": 0, "maximum": 6, "default": 2 },
            "color": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": true
    },
    "components": {
      "type": "array",
      "description": "コンポーネント配置設定",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "slot", "enabled"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "type": {
            "type": "string",
            "enum": [
              "ClockWidget",
              "WeatherWidget",
              "ChatLog",
              "SuperChatCard",
              "BrandBlock",
              "MainAvatarStage",
              "ChannelBadge",
              "SetList",
              "KPIBlock",
              "PromoPanel",
              "QueueList"
            ]
          },
          "slot": {
            "type": "string",
            "enum": [
              "left.top",
              "left.topBelow",
              "left.middle",
              "left.lower",
              "left.bottom",
              "center.full",
              "right.top",
              "right.upper",
              "right.lowerLeft",
              "right.lowerRight",
              "right.bottom"
            ]
          },
          "enabled": { "type": "boolean" },
          "style": { "type": "object" },
          "rules": {
            "type": "object",
            "properties": {
              "maxLines": { "type": "integer", "minimum": 4, "maximum": 14, "default": 10 },
              "maxItems": { "type": "integer", "minimum": 3, "maximum": 20, "default": 14 },
              "cycleSec": { "type": "integer", "minimum": 10, "maximum": 120, "default": 30 },
              "showSec": { "type": "integer", "minimum": 3, "maximum": 15, "default": 6 }
            },
            "additionalProperties": true
          },
          "tuning": {
            "type": "object",
            "properties": {
              "offsetX": { "type": "integer", "minimum": -40, "maximum": 40, "default": 0 },
              "offsetY": { "type": "integer", "minimum": -40, "maximum": 40, "default": 0 }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
